# =============================================================================
# Egy Discovery Environment Configuration
# =============================================================================
# Copy this file to .env and update the values according to your setup
# Never commit .env files to version control (already in .gitignore)

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
FLASK_ENV=production
FLASK_DEBUG=false

# =============================================================================
# N8N Configuration
# =============================================================================
# Base URL for your N8N instance
N8N_BASE_URL=http://localhost:5678
# API key for N8N (get this from N8N settings)
N8N_API_KEY=your_n8n_api_key_here
# Timeout for N8N API calls in seconds
N8N_TIMEOUT_SECONDS=30
# Webhook URL for N8N workflows (optional)
N8N_WEBHOOK_URL=http://localhost:5678/webhook/egy-discovery

# =============================================================================
# OpenAI Configuration
# =============================================================================
# Your OpenAI API key (get this from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here
# OpenAI model to use for AI agents
OPENAI_MODEL=gpt-3.5-turbo
# Maximum tokens for AI responses
OPENAI_MAX_TOKENS=1000
# Temperature for AI responses (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Database Configuration
# =============================================================================
# Database connection string (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///egy_discovery.db
# Redis connection string for caching (optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# Security Configuration
# =============================================================================
# Secret key for Flask sessions (generate a strong random key)
SECRET_KEY=your-secret-key-change-in-production-12345
# JWT secret key for authentication (generate a strong random key)
JWT_SECRET_KEY=your-jwt-secret-change-in-production-12345

# =============================================================================
# External Services
# =============================================================================
# Google Analytics ID (optional)
GOOGLE_ANALYTICS_ID=
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# =============================================================================
# Feature Flags
# =============================================================================
# Enable AI agents functionality
ENABLE_AI_AGENTS=true
# Enable N8N workflow integration
ENABLE_N8N_WORKFLOWS=true
# Enable web scraping functionality
ENABLE_WEB_SCRAPING=true

# =============================================================================
# Development Overrides (uncomment for development)
# =============================================================================
# FLASK_ENV=development
# FLASK_DEBUG=true
# N8N_BASE_URL=http://localhost:5678
# DATABASE_URL=sqlite:///dev_egy_discovery.db


